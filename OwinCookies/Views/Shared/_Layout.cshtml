<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=eedge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <link href="~/Content/toastr.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-flat.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-flat-extras.min.css" rel="stylesheet" />
    <title>Web API Security - OWIN Cookies</title>
</head>
<body ng-app="app">
    <nav class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <span class="navbar-brand"> Securing Your Web APIs</span>
            </div>
            @if (Request.IsAuthenticated)
            {
                using (Html.BeginForm("Logout", "Home", FormMethod.Post, new { id = "logoutForm", @class = "last-nav navbar-right navbar-text" }))
                {
                    <a class="navbar-link" href="javascript:document.getElementById('logoutForm').submit()">Logout</a>
                }
            }
            else
            {
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        @Html.ActionLink("Login", "Login")
                    </li>
                </ul>
            }
        </div>
    </nav>
    <section class="container">
        @RenderBody()
    </section>
    <script src="~/Scripts/jquery-2.1.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/toastr.min.js"></script>
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/app/app.js"></script>
</body>
</html>
